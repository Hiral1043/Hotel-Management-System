<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hotel_room_specification_view_form" model="ir.ui.view">
        <field name="name">room_specification.view.form</field>
        <field name="model">hotel.room.specification</field>
        <field name="arch" type="xml">
            <form string="Room Specification">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hotel_room_specification_view_list" model="ir.ui.view">
        <field name="name">room_specification.view.list</field>
        <field name="model">hotel.room.specification</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
            </list>
        </field>
    </record>
    <record id="hotel_room_specification_action" model="ir.actions.act_window">
        <field name="name">Room Specification</field>
        <field name="res_model">hotel.room.specification</field>
        <field name="view_mode">list,form</field>
    </record>
    
</odoo>
